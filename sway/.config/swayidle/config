timeout 240 'brightnessctl -s set 10%' resume 'brightnessctl --restore'
timeout 600 'swaylock'
timeout 660 'swaymsg "output * power off"' resume 'swaymsg "output * power on" && brightnessctl -r'
timeout 1500 'systemctl suspend' resume 'swaymsg "output * power on" && brightnessctl -r'
before-sleep 'swaylock'
lock 'swaylock'
